{
  "name": "solitude",
  "version": "0.1.0-BETA",
  "description": "Custom wordpress theme",
  "author": "Starry Solitude Studio",
  "license": "GPL-3.0-or-later",
  "keywords": [
    "Wordpress",
    "Theme"
  ],
  "homepage": "https://protogalaxy.me/tag/solitude/",
  "devDependencies": {
    "@wordpress/browserslist-config": "^4.1.0",
    "autoprefixer": "^10.3.1",
    "chokidar": "^3.5.2",
    "chokidar-cli": "^3.0.0",
    "eslint": "^7.32.0",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-scss": "^4.0.0",
    "postcss-sorting": "^6.0.0",
    "sass": "^1.38.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "scripts": {
    "start": "chokidar \"**/*.scss\" -c \"npm run build\" --initial",
    "build": "run-s \"build:*\"",
    "build:style": "sass assets/scss/style.scss:style.css --style=expanded --source-map",
    "build:fullPageScrolling": "sass assets/scss/02-tools/full-page-scrolling.scss assets/css/tools/full-page-scrolling.css --style=expanded --source-map",
    "watch": "chokidar \"**/*.scss\" -c \"npm run build\" --initial",
    "format:css": "npx prettier **/*.css --write",
    "format:js": "npx prettier **/*.js --write",
    "lint:scss": "stylelint **/*.scss",
    "lint-fix:scss": "stylelint **/*.scss --fix"
  }
}
